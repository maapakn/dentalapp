<h1>Listing Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Trabajo</th>
      <th>Material</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.nombre %></td>
        <td><%= pedido.trabajo.nombre %></td>
        <td><%= pedido.material.nombre %></td>
        <td><%= pedido.observacion %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Â¿Estas seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

