<div class="container well formborder">
  <div class="col-md-9 center-block no-float">
    <h2>Editar Usuario</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, 'Email' %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :nombre, 'Nombre' %><br />
        <%= f.text_field :nombre, class: "form-control",pattern:"[a-zA-Z, ' ', 'ñ','Ñ','á','é','í','ó','ú','Á','É','Í','Ó','Ú','Ü','ü']+", oninvalid:"setCustomValidity('Favor ingresar solo letras ')" %>
      </div>

      <div class="form-group">
        <%= f.label :rut, 'RUT' %><br />
        <%= f.text_field :rut,placeholder:"11.111.111-1", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :telefono, 'Telefono' %><br />
        <%= f.text_field :telefono, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :direccion, 'Dirección' %><br />
        <%= f.text_field :direccion, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :facturacion, '¿Desea Boleta o Factura?' %><br/>
        <%= f.radio_button :facturacion, 'Boleta'%>
        <%= f.label :facturacion, 'Boleta:' %>
        <%= f.radio_button :facturacion, 'Factura', :checked => true %>
        <%= f.label :facturacion, 'Factura:' %>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password , 'Contraseña' %> <i>(Dejar en blanco si no desea cambiarlo)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmar Contraseña' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, 'Contraseña Actual' %> <i>(Contraseña actual para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "btn btn-success" %>
      </div>
    <% end %>

    <h3>Cancelar mi cuenta</h3>

    <p>No estás feliz? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estás seguro?" }, method: :delete, class: "btn btn-danger" %></p>

    <%= link_to "Atrás", :back %>
  </div>
</div>