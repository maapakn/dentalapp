<link rel="stylesheet" href="/app/assets/stylesheets/style.css" type="text/css">
<link href="//fonts.googleapis.com/css?family=Roboto:300,400,500,600" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="/app/assets/stylesheets/awesome.css">

 <!-- AIO Radio Control Panel Style Sheet -->
<link rel="stylesheet" href="/app/assets/stylesheets/panel.style.css" type="text/css">

<script src="./../assets/javascripts/jquery-1.11.2.min.js"></script>
<script src="./../assets/javascripts/jquery.selectbox.min.js"></script>

<style>
  body {
    background: #62a8ea;
    background-image: radial-gradient(ellipse,#62a8ea 0,#3583ca 100%);
  }
  /* Move login to center of screen */
  .login-form {
    position: absolute;
    left: 45%;
    top: 2%;
    margin-left: -200px;
    width: 500px;
  }

  @media (max-width: 768px) {
    .login-form { top: 5%; }
  }

  .login-container {
    background: #fff;
    overflow: hidden;
    border-radius: 3px;
    border: 1px solid transparent;
    box-shadow: 0 2px 1px rgba(0,0,0,.1);
    margin-bottom: 10px;
  }

  .login-content {
    padding: 10px 25px 20px;
  }

  .login-header {
    color: #464646;
    margin: 30px 0 25px;
  }

  .login-header h2 {
    text-align: center;
    margin: 0;
    padding: 0;
    font-size: 20px;
  }

  .form-control {
    background: #f1f1f1;
    border-color: #f1f1f1;
    box-shadow: none;
    -webkit-box-shadow: 0 0 0 1000px #f1f1f1 inset;
  }

  .form-group { margin: 0 0 15px; }
  .form-control:focus { border-color: #f0f0f0; }
  .version-info { color: #fff; margin-top: 20px; text-shadow: 0 1px 0 rgba( 0, 0, 0, .2 ); }
  .divider { margin: 15px 0 0; border: 0; content: ""; }
</style>

<section class="col-sm-6 login-form">
  <div class="login-container">
          <div class="login-header">
              <h2><span class="fa fa-star"></span> Registrarse</h2>
          </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  
                  <div class="login-content">
                    <div class="form-group login">
                        <h5>Seleccione el tipo de Impresión</h5><br/>
                        <%= f.label :roles, 'Impresion Convensional:' %>
                        <%= f.radio_button :roles_mask, 'useranalogo', :checked => true %>
                        <%= f.label :roles, 'Impresion Digital:' %>
                        <%= f.radio_button :roles_mask, 'userdigital'%>
                    </div>
                  
                    <div class="form-group">
                      <%= f.label :email, 'Email'%><br />
                      <%= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :nombre, 'Nombre' %><br />
                      <%= f.text_field :nombre, class: "form-control", pattern:"[a-zA-Z, ' ', 'ñ','Ñ','á','é','í','ó','ú','Á','É','Í','Ó','Ú','Ü','ü']+", oninvalid:"setCustomValidity('Favor ingresar solo letras ')"  %>
                    </div>

                     <div class="form-group">
                      <%= f.label :rut, 'RUT' %><br />
                      <%= f.text_field :rut,placeholder:"11.111.111-1", class: "form-control" %>
                    </div>

                    <div class="form-group">
                    <%= f.label :telefono, 'Telefono' %><br />
                    <%= f.text_field :telefono, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :direccion, 'Dirección' %><br />
                      <%= f.text_field :direccion, autocomplete: "off", class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :facturacion, '¿Desea Boleta o Factura?' %><br/>
                      <%= f.label :facturacion, 'Boleta:' %>
                      <%= f.radio_button :facturacion, 'Boleta', :checked => true %>
                      <%= f.label :facturacion, 'Factura:' %>
                      <%= f.radio_button :facturacion, 'Factura'%>
                    </div>

                    <div class="form-group">
                      <%= f.label :password, 'Contraseña' %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :password_confirmation, 'Confirmar Contraseña' %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                    </div>

                    <div class="divider"></div>
                    <%= render "devise/shared/links" %>
                    <div class="actions">
                      <%= f.submit "Registrarse", class: "btn btn-success pull-right"%>
                    </div>
                    <div class="clearfix"></div>
                  <% end %>
          </div>
  </div>
</section></section><br><br>